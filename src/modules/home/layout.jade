!!! 5
html
	head
		block title
			title G+ Tags

		<!-- Included CSS Files -->
		link(rel='stylesheet', href='/stylesheets/foundation.css')
		link(rel='stylesheet', href='/stylesheets/global.css')
		// [if lt IE 9]
			link(rel='stylesheet', href='stylesheets/ie.css')

		link(rel='stylesheet', href='http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/flick/jquery-ui.css')

		<!-- IE Fix for HTML5 Tags -->
		// [if lt IE 9]
			script(src='http://html5shiv.googlecode.com/svn/trunk/html5.js')

	body
		.container(style='min-height: 500px; margin: 10px')
			block header
				.row.mzero
					.four.columns
						h2
							a(href="/", style='color:#000000') G+ Tags
					.eight.columns.align.right
						div(style='margin-top:5px;text-align:right')
							if (user)
								span #{user.name} (#{user.email})
								span &nbsp;|&nbsp;
								a.faint(href='/logout') Logout
							else
								a.faint(href='/auth/google') Login
			.row
				block content
					p
		block footer
			.row(style='clear:both')
				.three.columns.offset-by-eight.align-right(style='border-top:1px solid #cccccc')
						span.faint(style='padding:5px') &copy; 2011
						a.faint(href='/about', style='padding:5px') About
						a.faint(href='https://github.com/silkroad/gtags', style='padding:5px') Source
		block scripts
			script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js", type="text/javascript")
			script(src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.6/jquery-ui.min.js", type="text/javascript")

		block xtrascript
			// xtrascript

		block templates
			// templates
